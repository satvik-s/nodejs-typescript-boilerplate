{
  "name": "nodejs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "boilerplate for nodejs and typescript project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf node_modules dist",
    "test": "echo no tests!",
    "build": "tsc",
    "static-analysis": "eslint .",
    "lint-fix": "eslint --fix .",
    "prettier": "prettier --write .",
    "check-updates": "ncu",
    "make-updates": "ncu -u",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satvik-s/nodejs-typescript-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "eslint",
    "prettier"
  ],
  "author": "Satvik Shukla",
  "license": "MIT",
  "homepage": "https://github.com/satvik-s/nodejs-typescript-boilerplate#readme",
  "devDependencies": {
    "@types/node": "18.11.10",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.4",
    "npm-check-updates": "16.4.3",
    "prettier": "2.8.0",
    "rimraf": "3.0.2",
    "typescript": "4.9.3"
  },
  "lint-staged": {
    "*": "npm run prettier"
  }
}
